---
const {
  title = "Fran López Dev",
  description = "Portfolio Fran López - Front-End Developer",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/fl.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="canonical" href="https://franlopez.pages.dev/" />
    <meta property="og:site_name" content={description} />
    <meta property="og:url" content="https://franlopez.pages.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
