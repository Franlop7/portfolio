---
import LinkWeb from "@components/svg/Link.astro";
import Github from "@components/svg/github.astro";

export interface Props {
  title: string;
  body: string;
  link: string;
  deploy: string;
  img: string;
}

const { title, body, link, deploy, img } = Astro.props;
---

<article class="cardContainer">
  <header class="imgContainer">
    <img class="imgProject" src={img} alt={title} />
    <a
      class="textImg"
      target="_blank"
      rel="noreferrer noopener"
      aria-label="Enlace a la demo"
      href={deploy}
    >
      <span class="textDeploy">Ir al sitio</span>
      <LinkWeb width="22" height="22" />
    </a>
  </header>
  <h4 class="title">{title}</h4>
  <p class="parrafo">{body}</p>
  <footer class="toolsContainer">
    <section class="svgLinkContainer">
      <a
        class="svgLink"
        target="_blank"
        rel="noreferrer noopener"
        aria-label="Enlace a la demo"
        href={deploy}><LinkWeb width="25" height="25" /></a
      >
      <a
        class="svgLink"
        href={link}
        target="_blank"
        rel="noreferrer noopener"
        aria-label="link a github"
      >
        <Github height="24" width="24" />
      </a>
    </section>
  </footer>
</article>

<style>
  .cardContainer {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background-color: #252525;
    width: 350px;
    height: 460px;
    box-sizing: border-box;
  }

  .imgContainer {
    position: relative;
    height: 178px;
    width: 350px;
    overflow: hidden;
  }

  .imgProject {
    width: 350px;
    height: 178px;
  }

  a {
    text-decoration: none;
    color: var(--color-text-base);
  }
  a:visited {
    color: var(--color-text-base);
  }

  .textImg {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(46, 44, 44, 0.8);
    opacity: 0;
    transition: 0.5s;
    font-size: 18px;
    font-weight: 600;
    fill: #fff;
  }
  .textImg:hover {
    opacity: 1;
  }

  .textDeploy {
    padding-right: 10px;
    color: #fff;
  }

  .title {
    text-align: left;
    border-radius: 6px 6px 0 0;
    font-weight: 600;
    color: #24a4d2;
    padding: 14px 24px 0 24px;
    box-sizing: border-box;
    width: 100%;
    font-size: 1.1rem;
  }

  .parrafo {
    width: 100%;
    padding: 24px;
    box-sizing: border-box;
    font-size: 1rem;
    height: 140px;
    color: #fff;
  }

  .toolsContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 86px;
    width: 100%;
  }

  .svgLinkContainer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 14px;
    width: 100%;
    padding: 0px 24px;
    padding-bottom: 20px;
    box-sizing: border-box;
  }

  .svgLink {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    fill: #fff;
    transition: 0.3s;
  }

  .svgLink:hover {
    fill: var(--color-primary);
  }
</style>
