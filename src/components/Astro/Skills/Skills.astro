---
import Html from "../../svg/html.astro";
import Css from "../../svg/css.astro";
import Tailwind from "../../svg/tailwind.astro";
import Javascript from "../../svg/javascript.astro";
import Typescript from "../../svg/typescript.astro";
import React from "../../svg/react.astro";
import Next from "../../svg/next.astro";
import AstroSvg from "../../svg/astro.astro";
---

<section class="sectionContainer">
  <h3 class="subtitle" id="skills">Skills</h3>
  <div class="iconContainer">
    <div class="skillIconContainer">
      <Html />
      <span>HTML</span>
    </div>
    <div class="skillIconContainer">
      <Css />
      <span>CSS</span>
    </div>
    <div class="skillIconContainer">
      <div class="fixSvgTailwind">
        <Tailwind />
      </div>
      <span>Tailwind</span>
    </div>
    <div class="skillIconContainer">
      <Javascript />
      <span>JavaScript</span>
    </div>
    <div class="skillIconContainer">
      <Typescript />
      <span>Typescript</span>
    </div>
    <div class="skillIconContainer">
      <React />
      <span>ReactJS</span>
    </div>
    <div class="skillIconContainer">
      <Next />
      <span>NextJS</span>
    </div>
    <div class="skillIconContainer">
      <AstroSvg />
      <span>Astro</span>
    </div>
  </div>
</section>

<style>
  .sectionContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 120px;
  }
  .iconContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    max-width: 820px;
    padding: 0 20px;
    box-sizing: border-box;
  }
  .skillIconContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80px;
    text-align: center;
  }
  .fixSvgTailwind {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
  }
</style>
