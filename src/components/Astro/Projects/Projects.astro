---
import Card from "./Card.astro";
import { data } from "../../utils/data";
---

<section class="projectContainer">
  <h3 class="subtitle" id="project">Projects</h3>
  <article class="cardContainer">
    {
      data.map((e) => {
        return (
          <Card
            title={e.title}
            body={e.body}
            img={e.img}
            deploy={e.deploy}
            link={e.link}
          />
        );
      })
    }
  </article>
</section>

<style>
  .projectContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 500px;
  }
  .cardContainer {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 90px;
    align-items: center;
    width: 100%;
    max-width: 820px;
  }
</style>
