{
    "env": {
      "es2022": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "standard",
      "plugin:astro/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-unused-vars": "warn",
      "no-multiple-empty-lines": "off",
      "no-tabs": "off",
      "quotes": [
        "warn",
        "single"
      ],
      "jsx-quotes": [
        "warn",
        "prefer-single"
      ],
      "eol-last": "off"
    },
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser",
          "extraFileExtensions": [
            ".astro"
          ]
        },
        "rules": {
          "astro/no-set-html-directive": "error"
        }
      }
    ]
  }